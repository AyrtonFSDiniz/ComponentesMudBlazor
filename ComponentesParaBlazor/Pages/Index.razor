
@page "/"

<PageTitle>Exemplo de personalizado</PageTitle>

<MudGrid>
        <MudItem md="4"
                 sm="12"
                 xs="12">
            <DataCard BarColor="@Colors.Blue.Default"
                      ChartId="chartTwo"
                      IncreaseDecrease="IncreaseDecreaseInstalls"
                      LastTenDays="_lastTenDaysInstalls"
                      Title="Total de instalações"
                      Total="TotalInstalls" 
                      />
        </MudItem>
    </MudGrid>

<MudGrid>
    <MudItem md="4"
                 sm="12"
                 xs="12">
 <MudCard Class="d-flex flex-row mt-4" style="border-left-color: red; border-left-style: solid; border-left-width: thick;">
        <MudCardContent>
            <div class="align-center d-flex">
                <div class="d-flex flex-column mr-8">
            <MudText Typo="Typo.h6">TEste</MudText>
            <MudText>500</MudText>
                </div>
                <div>
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" />
                </div>

            </div>

        </MudCardContent>
    </MudCard>
    </MudItem>

    <MudItem md="4"
                 sm="12"
                 xs="12">
 <MudCard Class="d-flex flex-row mt-4" style="border-left-color: blue; border-left-style: solid; border-left-width: thick;">
        <MudCardContent>
            <div class="align-center d-flex">
                <div class="d-flex flex-column mr-8">
            <MudText Typo="Typo.h6">Card com progress bar</MudText>

            <div>
                <MudText Class="mr-3">50%</MudText>
                <MudProgressLinear Color="Color.Default" Rounded="true" Size="Size.Medium" Value="50" />
            </div>
                </div>
                <div>
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" />
                </div>
            </div>

        </MudCardContent>
    </MudCard>
    </MudItem>
</MudGrid>
   


@code{

    private const int TotalInstalls = 1000;
    private const double IncreaseDecreaseInstalls = 8;

    private readonly List<int> _lastTenDaysInstalls = new() {10, 20, 30, 40, 50, 60, 70, 80, 90};
}