
@page "/"

<PageTitle>Exemplo de personalizado</PageTitle>

<MudGrid>
        <MudItem md="4"
                 sm="12"
                 xs="12">
            <DataCard BarColor="@Colors.Blue.Default"
                      ChartId="chartTwo"
                      IncreaseDecrease="IncreaseDecreaseInstalls"
                      LastTenDays="_lastTenDaysInstalls"
                      Title="Total de instalações"
                      Total="TotalInstalls" 
                      />
        </MudItem>
    </MudGrid>

<MudGrid>
    <MudItem md="4"
                 sm="12"
                 xs="12">
 <MudCard Class="d-flex flex-row mt-4" style="border-left-color: red; border-left-style: solid; border-left-width: thick;">
        <MudCardContent>
            <div class="align-center d-flex">
                <div class="d-flex flex-column mr-8">
            <MudText Typo="Typo.h6">Teste</MudText>
            <MudText>@NumberProgressBar2</MudText>
                </div>
                <div>
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" />
                </div>

            </div>

        </MudCardContent>
    </MudCard>
    </MudItem>

    <MudItem md="4"
                 sm="12"
                 xs="12">
 <MudCard Class="d-flex flex-row mt-4" style="border-left-color: blue; border-left-style: solid; border-left-width: thick;">
        <MudCardContent>
            <div class="align-center d-flex">
                <div class="d-flex flex-column mr-8">
            <MudText Typo="Typo.h6">Card com progress bar</MudText>

            <div>
                <MudText Class="mr-3">@NumberProgressBar%</MudText>
                <MudProgressLinear Color="Color.Default" Rounded="true" Size="Size.Medium" Value="@NumberProgressBar" />
            </div>
                </div>
                <div>
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" />
                </div>
            </div>

        </MudCardContent>
    </MudCard>
    </MudItem>
</MudGrid>
   
    <MudCard Elevation="0" Class="d-flex flex-row justify-center align-content-center"
         Style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <MudProgressCircular Color="Color.Default" Indeterminate="true" Size="Size.Medium" />
    </MudCard>


@code{

    private int TotalInstalls {get; set;}
    private double IncreaseDecreaseInstalls = 8;
    private readonly List<int> _lastTenDaysInstalls = new() {10, 20, 30, 40, 50, 60, 70, 80, 90};
    private int NumberProgressBar;
    private int NumberProgressBar2;

    protected override async Task OnInitializedAsync()
    {
        Random random = new Random();
        int randomNumber = random.Next(101);
        NumberProgressBar = randomNumber;

        Random random2 = new Random();
        int randomNumber2 = random2.Next(900);
        NumberProgressBar2 = randomNumber2;
        TotalInstalls = NumberProgressBar2;

        await base.OnInitializedAsync();
    }
}